<div class="container">
    <div class="row">
        <div class="col-sm-9">
            <div class="row d-flex flex-column">
                <h1><%= @artist.name %></h1>      
                <h4> Albums (<%= @album.length %>) </h4>
            </div>
            <div class="row">
                <% @album.each do |item|%> 
                <div class="col-sm-3">
                    <div class="card albumsShow">
                        <img src="<%= item.image_url %>" class="card-img-top">
                        <div class="card-body d-flex align-items-start">
                            <h5><%= item.name %></h5>
                            <h5><%= item.released_at %></h5>
                        </div>
                      </div>
                </div>         
            <% end %>
            </div>
        </div>
        <div class="col-sm-3">
            <img src="<%= @artist.image_url %>" class="artist-show">
        </div>    
    </div>
</div>



